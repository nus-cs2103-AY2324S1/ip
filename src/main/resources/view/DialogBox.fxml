<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.layout.VBox?>
<fx:root alignment="TOP_RIGHT" styleClass="dialog-box" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" style="-fx-padding: 10;">
            <Label fx:id="dialog" text="Label" wrapText="true">
                <HBox.margin>
                    <Insets bottom="5" left="5" right="5" top="5"/>
                </HBox.margin>
            </Label>
        </VBox>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <!-- Clip the ImageView into a circle -->
                <Circle centerX="50" centerY="50" radius="50" />
            </clip>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
    </padding>
</fx:root>
