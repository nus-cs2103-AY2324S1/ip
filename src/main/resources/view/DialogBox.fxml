<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root id="anchor" alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308" minHeight="-Infinity"
         prefWidth="520.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="dialog" alignment="TOP_LEFT" cache="true" lineSpacing="3.5"
           style="-fx-background-color: #FFD1DC; -fx-background-radius: 15; -fx-label-padding: 15;
           -fx-border-color: #FF88C2; -fx-border-radius: 15; -fx-border-width: 2.5;" text="Text" wrapText="true">
        <font>
            <Font name="Arial Rounded MT Bold" size="17.0" />
        </font>
        <HBox.margin>
            <Insets />
        </HBox.margin>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </Label>
    <ImageView fx:id="displayPicture" fitHeight="85.0" fitWidth="85.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets left="30.0" right="30.0" />
        </HBox.margin>
    </ImageView>
</fx:root>
