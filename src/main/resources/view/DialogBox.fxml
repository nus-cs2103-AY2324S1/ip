<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT" maxWidth="1.7976931348623157E308" prefWidth="370.0" style="-fx-spacing: 10; -fx-background-color: transparent;" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox style="-fx-background-color: #79a5ed; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 8px;" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="dialog" minHeight="-Infinity" style="-fx-text-fill: white;" text="Message Text Here" wrapText="true" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" bottom="5.0" />
                    </padding>
                </Label>
            </children>
        </HBox>

        <ImageView fx:id="displayPicture" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.5), 10, 0, 0, 0);" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
