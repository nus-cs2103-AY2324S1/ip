<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_RIGHT" maxHeight="Infinity" maxWidth="1.7976931348623157E308" prefWidth="400.0"
         type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0"/>
    </padding>
    <Label fx:id="dialog" prefWidth="350.0" text="Label with long text that should wrap to the next line when needed." wrapText="true">
        <font>
            <Font name="Segoe UI" size="14.0"/>
        </font>
        <padding>
            <Insets bottom="15" top="15" left="20" right="20" />
        </padding>
    </Label>
    <ImageView fx:id="displayPicture" fitHeight="72.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets left="10.0" right="10.0"/>
        </HBox.margin>
    </ImageView>
</fx:root>
