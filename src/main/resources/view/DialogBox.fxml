<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.Region?>
<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true"
               style="-fx-font-family: Roboto, sans-serif;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-text-fill: #00ccff;
                        -fx-background-color: #333333;
                        -fx-background-radius: 5px;
                        -fx-border-color: #00ccff;
                        -fx-border-width: 5px;
                        -fx-padding: 5;
                        -fx-effect: innershadow( three-pass-box , rgba(0,0,0,0.5) , 10, 0.0 , 0 , 2 );
                        -fx-opacity: 0.9;
                        /* Inner border (to hide the original border) */
                        -fx-border-insets: -2;
                        -fx-border-radius: 7;
                        -fx-background-insets: 2;" />
        <Region prefWidth="20" />
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
