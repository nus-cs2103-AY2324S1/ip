<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog"
               text="Label"
               wrapText="true"
               style="
                    -fx-padding: 8;
                    -fx-border-radius: 8;
                    -fx-border-color: black ">
            <HBox.margin>
                <Insets left="5.0" right="5.0" top="10.0" />
            </HBox.margin>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
            <clip >
                <Circle radius="30.0" centerX="30.0" centerY="30.0" />
            </clip>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="10.0" left="7.0" right="7.0" top="10.0" />
    </padding>
</fx:root>

