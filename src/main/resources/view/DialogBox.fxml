<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root
        alignment="TOP_RIGHT"
        maxHeight="1.7976931348623157E308"
        maxWidth="1.7976931348623157E308"
        prefWidth="400.0"
        stylesheets="@../stylesheets/styles.css"
        type="javafx.scene.layout.HBox"
        xmlns="http://javafx.com/javafx/20.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
>
    <children>
        <Label fx:id="dialog" styleClass="dialog-box" text="Label" wrapText="true">
            <font>
                <Font name="Courier New" size="16.0" />
            </font>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <HBox.margin>
                <Insets left="15.0" right="15.0" />
            </HBox.margin>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</fx:root>
