<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="duke.MainWindow">

    <ScrollPane VBox.vgrow="ALWAYS" fx:id="scrollPane" hbarPolicy="NEVER">
        <content>
            <VBox fx:id="dialogContainer" prefWidth="388.0" />
        </content>
    </ScrollPane>

    <HBox>
        <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="41.0" prefWidth="324.0" />
        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="41.0"
                prefWidth="76.0" text="Send" />
    </HBox>

</VBox>

