<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="-Infinity" prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="duke.ui.graphic.MainWindow">
   <children>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" hbarPolicy="NEVER" hmax="0.0" vvalue="1.0" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="dialogContainer" maxWidth="1.7976931348623157E308" minWidth="0.0" />
            </content>
        </ScrollPane>
      <HBox maxWidth="1.7976931348623157E308" prefHeight="50.0" spacing="20.0">
         <children>
              <TextField fx:id="userInput" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#handleUserInput" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font></TextField>
              <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleUserInput" text="Send">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
