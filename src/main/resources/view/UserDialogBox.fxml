<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308" prefWidth="400.0"
         style="-fx-border-color: rgba(0, 0, 0, 0.5);
         -fx-border-radius: 30;
         -fx-background-color: rgba(235, 235, 235, 0.5);
         -fx-background-radius: 30; -fx-border-insets: 5;
         -fx-background-insets: 5; -fx-border-width: 1;"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
    <Label fx:id="dialog" minHeight="-Infinity"
           style="-fx-background-color: rgba(220,220,220,0.7);
                    -fx-background-radius: 25; -fx-padding: 15;"
           text="Label" wrapText="true">
        <font>
            <Font name="Segoe UI Bold Italic" size="12.0" />
        </font>
    </Label>
    <ImageView fx:id="displayPicture" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
    </ImageView>
</fx:root>
