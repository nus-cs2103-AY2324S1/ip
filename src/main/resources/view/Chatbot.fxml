<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="chatbot.ChatbotController"
            prefHeight="400.0" prefWidth="600.0">

    <ScrollPane fx:id="scrollPane" fitToWidth="true" layoutY="5.0" prefHeight="345.0" prefWidth="590.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <content>
            <VBox fx:id="dialogContainer" spacing="10.0"/>
        </content>
    </ScrollPane>

    <TextField fx:id="inputField" onAction="#handleSendButtonClick" layoutY="355.0" prefHeight="30.0" prefWidth="500.0" promptText="Enter your command here..." AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="5.0"/>
    <Button fx:id="sendButton" layoutX="510.0" layoutY="355.0" prefHeight="30.0" prefWidth="80.0" text="Send" onAction="#handleSendButtonClick" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="5.0" />


</AnchorPane>
